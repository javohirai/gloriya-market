<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="50dp"
    android:gravity="center_vertical"
    android:background="@color/colorBgSutItems"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/order_label.second_label"
                android:text="@string/label_tp_name"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tvFrwdTradePoint"
                style="@style/order_items"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/order_label.second_label"
                android:text="@string/label_cash"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tvFrwdCash"
                style="@style/order_items"/>
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/chbIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"/>

</LinearLayout>