<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/chSubForwarderChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tvForwarderNameChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Azizov Husan"
                android:textSize="16dp"
                android:textColor="@color/colorBaseText"
                />
            <TextView
                android:id="@+id/tvTotalForwarderAmountChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="481 727 000 uzs"
                android:textSize="16dp"
                android:textColor="@color/colorAproved"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#10000000"
        />
</LinearLayout>