<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:padding="5dp"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ordersTpName"
            style="@style/order_label"
            android:layout_width="match_parent"/>
        <TextView
            android:id="@+id/ordersTitle"
            style="@style/order_label"
            android:textSize="15sp"
            android:textColor="@color/colorText1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/order_label.second_label"
                android:text="@string/label_price_type_2"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ordersItemPriceType"
                style="@style/order_items"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/order_label.second_label"
                android:text="@string/label_comment2"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ordersItemComment"
                style="@style/order_items"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/order_label.second_label"
                android:text="@string/label_order_total_price2"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ordersItemTotalPrice"
                style="@style/order_items"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/order_label.second_label"
                android:text="@string/label_status"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ordersItemStatus"
                style="@style/order_items"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ordersItemAttention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp"
            android:visibility="gone"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ordersItemEdit"
        style="@style/img_orders_icon"
        android:src="@drawable/btn_order_edit_selector"
        android:contentDescription="@null"/>
</LinearLayout>