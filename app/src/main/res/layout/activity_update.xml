<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/app_actionbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/ivDownload"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_download"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp">
        <TextView
            android:id="@+id/tvVersionCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Новая версия: V1.2.1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/tvVersionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="14dp"
            android:textColor="#ae000000"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_version_disription"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#ae000000"
            />
        <TextView
            android:id="@+id/tvUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить"
            android:background="@drawable/btn_main_background"
            android:layout_marginTop="24dp"
            android:textColor="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            />
        <TextView
            android:id="@+id/tvLater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не сейчас"
            android:background="@drawable/btn_main_diactive_background"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            />
    </LinearLayout>

</LinearLayout>