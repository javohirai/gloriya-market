<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/order_content">
    <TextView
        style="@style/order_label"
        android:layout_marginTop="10dp"
        android:text="@string/label_upload_date"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/orderUploadDate"
            style="@style/common_edit_text"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:enabled="false"
            android:paddingRight="45dp"
            android:hint="@string/hint_input_upload_date"
            android:inputType="date"/>
        <ImageView
            android:id="@+id/ivMyCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical|right"
            android:contentDescription="@null"
            android:src="@android:drawable/ic_menu_today"/>
    </FrameLayout>
</LinearLayout>