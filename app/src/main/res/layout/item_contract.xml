<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvContractName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:textColor="#CC000000"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/elv_label"
            android:textColor="@color/colorPrimary"
            android:text="@string/date_contract"/>
        <TextView
            android:id="@+id/tvContractDate"
            style="@style/elv_text"
            android:textColor="@color/colorText1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/elv_label"
            android:textColor="@color/colorPrimary"
            android:text="@string/amount_contrac"/>
        <TextView
            android:id="@+id/tvContractSum"
            style="@style/elv_text"
            android:textColor="@color/colorText1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/elv_label"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="4dp"
            android:text="@string/terms_contract"/>
        <TextView
            android:id="@+id/tvTermOfContract"
            style="@style/elv_text"
            android:textColor="@color/colorText1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPartOfPick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnContact"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="0"
            android:text="@string/pick_contract" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E4E4E4"/>
</LinearLayout>